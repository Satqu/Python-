def rozrahynok_kincevoi_ocinku(oсinka_za_praktuky, ocinka_za_ekzamen):#обчислює кінцеву оцінку студента на основі оцінок за практичні заняття та екзамен
#Логіка:Якщо обидві оцінки (за практику та екзамен) більші або рівні 5,
# то кінцева оцінка розраховується за формулою:
# кінцева_оцінка = 0.3 * оцінка_за_практику + 0.7 * оцінка_за_екзаменЯкщо хоча б одна з оцінок менше 5,
# то кінцева оцінка — це мінімальна з двох оцінок.
    if oсinka_za_praktuky >= 5 and ocinka_za_ekzamen >= 5:
        kinceva_ocinka = 0.3 * oсinka_za_praktuky + 0.7 * ocinka_za_ekzamen
    else:
        kinceva_ocinka = min(oсinka_za_praktuky, ocinka_za_ekzamen)

    return kinceva_ocinka


def main():#зчитує оцінки від користувача, обчислює кінцеві оцінки та виводить результати
    ocinky = []

    while True:#Програма запитує оцінку за практичні заняття
        oсinka_za_praktuky = input("Оцінка за практичні заняття: ")

        if oсinka_za_praktuky == "-1":#Якщо користувач вводить -1, цикл переривається, якщо введено не -1, програма запитує оцінку за екзамен
            break

        ocinka_za_ekzamen = input("Оцінка за екзамен: ")

        try:#Використовується try щоб перевірити чи введені значення можна перетворити на числа
            oсinka_za_praktuky = float(oсinka_za_praktuky)
            ocinka_za_ekzamen = float(ocinka_za_ekzamen)

            #Якщо оцінки не знаходяться в межах від 0 до 10, виводиться повідомлення про помилку, і цикл продовжується
            if not (0 <= oсinka_za_praktuky <= 10 and 0 <= ocinka_za_ekzamen <= 10):
                print("Помилка: Оцінки повинні бути в межах від 0 - 10.")
                continue
            #Обчислення та збереження кінцевої оцінки
            kinceva_ocinka = rozrahynok_kincevoi_ocinku(oсinka_za_praktuky, ocinka_za_ekzamen)
            ocinky.append(kinceva_ocinka)

            print(f"Кінцева оцінка: {kinceva_ocinka:.2f}")
        # Якщо введено нечислове значення, виникає помилка
        except ValueError:
            print("Помилка: Будь ласка, введіть числові значення.")
    #Розрахунок середньої оцінки
    if ocinky:
        serednya_ocinka = sum(ocinky) / len(ocinky)
        print(f"Середня оцінка по групі: {serednya_ocinka:.2f}")
    else:
        print("Оцінки не були введені.")
#Запуск програми і перевіряє чи програма запускається як основний модуль
if __name__ == "__main__":
    main()